body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  min-width:950px
a
  color: #00B7FF

.readme table
	border: 1px solid #CCCCC
.readme th 
	border-top: 1px solid #CCCCCC
	border-bottom: 2px solid #CCCCCC
	border-left: 1px solid #CCCCCC
	border-right: 1px solid #CCCCCC
.readme td
	border-bottom: 1px solid #CCCCCC
	border-top: 1px solid #CCCCCC
	border-left: 1px solid #CCCCCC
	border-right: 1px solid #CCCCCC
	padding: 5px
.row 
	margin-left: 0px
	margin-right: 0px
.doc-group
	background-color: #f5f5f5
	border: 1px solid #e3e3e3 
	min-height:800px
	position:relative
	height:100%


.doc-header
.doc-header.active,
.doc-header.active:hover,
.doc-header.active:focus
	position: relative
	display: block
	padding: 10px 15px
	margin-bottom: -1px
	border: 0px
	color:black
	z-index: 2
	color: #ffffff
	background-color: #E51837
	text-decoration: none


.doc-group-item
	position: relative
	display: block
	padding: 10px 15px
	margin-bottom: -1px
	border-top: 1px solid #dddddd
	color:black

.doc-group-item:hover
	color:black
	border-right: 2px solid #E51837
	text-decoration: none

.doc-group-item.active,
.doc-group-item.active:hover,
.doc-group-item.active:focus
	z-index: 2
	color: #ffffff
	background-color: #E51837

.doc-group-item .item-arrow
	margin-right:2px;

.doc-group-item:hover .item-arrow,
.doc-group-item:focus .item-arrow 
	margin-right:0px;

.uncategorized
	border-left: 2px solid #E51837

.doc-group-chapter
	padding-top: 3px
	padding-bottom: 3px
	font-size: 90%
	color: #716b7a
	position: relative
	display: block

.doc-group-chapter:hover,
.doc-group-chapter:focus
	border-right: 2px solid #E51837



.doc-actions
	position:relative
	display:block
	margin-top:10px
	padding:10px
	border-top: 1px solid #dddddd
	bottom:0px



.doc-category,
.doc-category:hover
	background: #5C5E5D
	color:white
	border:none

.doc-category-artifact,
.doc-category-artifact:hover
	background: #FCF8E3
	color:inherit
	text-decoration:none
	border:none

.doc-category-blog,
.doc-category-blog:hover
	color:inherit
	text-decoration:none
	background: #D9EDF7
	border:none

.logo
	float:right
	margin-left:10px
	margin-right:10px
	margin-bottom:10px

.doc-metadata
	margin-bottom:5px
	text-align:right

.modal-dialog
	width:1000px